<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <View
        android:id="@+id/maskHead"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@color/colorRecyclerItemMask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/maskView1"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:layout_margin="20dp"
        android:background="@color/colorRecyclerItemMask"
        app:layout_constraintStart_toEndOf="@+id/maskHead"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/maskView2"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_margin="20dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorRecyclerItemMask"
        app:layout_constraintStart_toEndOf="@+id/maskHead"
        app:layout_constraintTop_toBottomOf="@id/maskView1" />

    <View
        android:id="@+id/maskView3"
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorRecyclerItemMask"
        app:layout_constraintStart_toEndOf="@+id/maskHead"
        app:layout_constraintTop_toBottomOf="@id/maskView2" />

</android.support.constraint.ConstraintLayout>
